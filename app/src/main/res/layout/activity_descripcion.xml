<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descripcionActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    //////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text=" volver a la tienda"
                android:background="#fff">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="arial"
                android:text="EMDICEL"
                android:textColor="#FF9800"
                android:textSize="35sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/carrito"
                android:paddingRight="20dp"></Button>
        </LinearLayout>
        ////////////////////////////////////////////////////////////////////////
        <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="arial"
                android:text="CARRITO DE COMPRAS"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>
    ///////////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:background="@mipmap/celular"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    android:text="Galaxy S20 Cloud Blue"
                    android:textSize="20dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Suministrados y entragos por Emdicel PERU" />
            </LinearLayout>
        </LinearLayout>
        //////////////////////////////////////////////////////////////////////
        <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="arial"
                android:text="Entrega"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>
        ///////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Vea todas las opciones de envio para sus productos, incluidas las tarifas y los precios de envio"
                android:textSize="15dp"/>
        </LinearLayout>
        ///////////////////////////////////////////////////////////////////////
        <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="90dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="1"
            android:inputType="textPersonName"
            android:background="@drawable/button_border_radius"/>
            <Button
                android:text="+"
                android:textColor="#fff"
                android:background="#000"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </Button>
            <Button
                android:text="-"
                android:textColor="#fff"
                android:background="#000"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </Button>
            </LinearLayout>
          ////////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="arial"
                android:text="Sub Total"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/.3,499" />
        </LinearLayout>
        ////////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="arial"
                android:text="Total"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/.3,499"
                android:textStyle="bold"/>
        </LinearLayout>
        ////////////////////////////////////////////////////////////////////////
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:layout_marginLeft="20dp"
                android:text="FINALIZAR COMPRA"
                android:background="@drawable/button_border_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>